{
  "compilerOptions": {
    "module": "AMD",
    "lib": ["ES2019", "DOM"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "ES5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "importHelpers": true,
    "moduleResolution": "Node",
    "outDir": "outDir",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
