@using Forestry.Flo.Services.Common.Extensions;
@model Forestry.Flo.Internal.Web.Models.FellingLicenceApplication.FellingAndRestockingDetails
<div id = "felling-restocking-summary">
    <h2 class="govuk-heading-m">Restocking Details</h2>

    @foreach(var fellingDetails in Model.DetailsList)
    {
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Compartment</th>
                    <th scope="col" class="govuk-table__header">Restocking Proposal</th>
                    <th scope="col" class="govuk-table__header">Area</th>
                    <th scope="col" class="govuk-table__header">Percentage of Restock Area</th>
                    <th scope="col" class="govuk-table__header">Density</th>
					<th scope="col" class="govuk-table__header">Trees</th>
				</tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">@fellingDetails.CompartmentName</td>
                    <td class="govuk-table__cell">@fellingDetails.RestockingDetail.RestockingProposal.GetDisplayName()</td>
                    <td class="govuk-table__cell">@fellingDetails.RestockingDetail.Area</td>
                    <td class="govuk-table__cell">@fellingDetails.RestockingDetail.PercentageOfRestockArea</td>
                    <td class="govuk-table__cell">@fellingDetails.RestockingDetail.RestockingDensity</td>
                    <td class="govuk-table__cell">@fellingDetails.RestockingDetail.NumberOfTrees</td>
                </tr>
            </tbody>
        </table>
        <table class="govuk-table">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Species</th>
                    <th scope="col" class="govuk-table__header">Percentage</th>
                    <th scope="col" class="govuk-table__header">Volume</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                @foreach (var speciesDetails in fellingDetails.RestockingDetail.Species.Keys)
                {
                    var speciesDetail = fellingDetails.FellingDetail.Species[speciesDetails];
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">@speciesDetail.Species</td>
                    </tr>
                }
            </tbody>
        </table>
    }
        
</div>
