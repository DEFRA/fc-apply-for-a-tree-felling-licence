@{
    ViewData["Title"] = "Review tree health";

    var user = new InternalUser(User);
}
@using System.Web
@model Forestry.Flo.Internal.Web.Models.AdminOfficerReview.CheckTreeHealthIssuesViewModel

<div class="govuk-grid-column-two-thirds width-limit-override">

    <partial name="Partials/_ConfirmationMessageDisplay" />
    <partial name="Partials/_UserGuideDisplay" />

    <h1 class="govuk-heading-l">@ViewData["Title"]</h1>

    <partial model="@Model.TreeHealthIssuesViewModel" name="Partials/_CheckTreeHealthIssues"/>

    <form id="admin-officer-review" method="post">
        <input asp-for="ApplicationId" />

        <govuk-form-group asp-for="Confirmed">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="is-prioritised-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
					Confirm the application has been prioritised appropriately
                </legend>
                <div id="is-prioritised-hint" class="govuk-hint">
                    Some additional guidance goes here if needed...
                </div>
                <validation asp-for="Confirmed"></validation>
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                        <input condition-disabled="@(!Model.Editable(user))" class="govuk-checkboxes__input" asp-for="Confirmed" type="checkbox" />
                        <label class="govuk-label govuk-checkboxes__label" asp-for="Confirmed">
                            I confirm
                        </label>
                    </div>
                </div>
            </fieldset>
        </govuk-form-group>

        <div>

            <button condition="@Model.Editable(user)" type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>

            <a class="govuk-button govuk-button--secondary" asp-action="Index" asp-route-id="@Model.ApplicationId" title="Back to admin officer review">Back to Admin Officer Review</a>

        </div>
    </form>
</div>

@section breadcrumbs
{
    <partial name="Partials/_BreadcrumbsMenu" model="@Model.Breadcrumbs"/>
}