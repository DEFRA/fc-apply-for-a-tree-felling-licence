@using Forestry.Flo.Internal.Web.Infrastructure

@{
    if (TempData.ContainsKey(ControllerExtensions.ConfirmationMessageKey) || TempData.ContainsKey(ControllerExtensions.ConfirmationMessageBodyKey))
    {
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Success
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <h3 condition="@TempData.ContainsKey(ControllerExtensions.ConfirmationMessageKey)" class="govuk-notification-banner__heading">
                    @TempData[ControllerExtensions.ConfirmationMessageKey]
                </h3>
                <p class="govuk-body" condition="@TempData.ContainsKey(ControllerExtensions.ConfirmationMessageBodyKey)">
                    @TempData[ControllerExtensions.ConfirmationMessageBodyKey]
                </p>
            </div>
        </div>
    }
}