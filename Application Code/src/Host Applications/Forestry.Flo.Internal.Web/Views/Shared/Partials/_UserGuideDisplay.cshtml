@using Forestry.Flo.Internal.Web.Infrastructure

@{
    if (TempData.ContainsKey(ControllerExtensions.UserGuideKey) || TempData.ContainsKey(ControllerExtensions.UserGuideBodyKey))
    {
        <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Information
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <p condition="@TempData.ContainsKey(ControllerExtensions.UserGuideKey)" class="govuk-notification-banner__heading">
                    @TempData[ControllerExtensions.UserGuideKey]
                </p>

                <p condition="@TempData.ContainsKey(ControllerExtensions.UserGuideBodyKey)" class="govuk-body">
                    @TempData[ControllerExtensions.UserGuideBodyKey]
                </p>

                <p condition="@TempData.ContainsKey(ControllerExtensions.UserGuideLinkKey)" class="govuk-body">
                    @{
                        var link = TempData.Get<ControllerExtensions.NotificationLink>(ControllerExtensions.UserGuideLinkKey);
                    }

                    <a class="govuk-notification-banner__link" href="@link.Link">@link.Text</a>
                </p>

            </div>
        </div>
    }
}