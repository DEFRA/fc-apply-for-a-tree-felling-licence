@using Forestry.Flo.Services.Common.Extensions
@using Forestry.Flo.Services.Common.User
@using Forestry.Flo.Services.FellingLicenceApplications.Entities
@model Forestry.Flo.Internal.Web.Views.Shared.Components.GdsApplicationStatusTag.GdsApplicationStatusTagViewComponentModel

@{
    var className =
        Model.ApplicationState switch
        {
            FellingLicenceStatus.Received => "govuk-tag--pink",
            FellingLicenceStatus.Submitted => "govuk-tag--blue",
            FellingLicenceStatus.Draft => "govuk-tag--grey",
            FellingLicenceStatus.Withdrawn => "govuk-tag--orange",
            FellingLicenceStatus.Approved => "govuk-tag--green",
            FellingLicenceStatus.WithApplicant => "govuk-tag--purple",
            FellingLicenceStatus.ReturnedToApplicant => "govuk-tag--purple",
            FellingLicenceStatus.WoodlandOfficerReview => "govuk-tag--yellow",
            FellingLicenceStatus.SentForApproval => "govuk-tag--yellow",
            FellingLicenceStatus.Refused => "govuk-tag--red",
            FellingLicenceStatus.ReferredToLocalAuthority => "govuk-tag--mid-grey",
            _ => "govuk-tag--grey"
        };
}

<strong class="govuk-tag @className">
    @Model.ApplicationState.GetDisplayNameByActorType(ActorType.InternalUser)
</strong>
