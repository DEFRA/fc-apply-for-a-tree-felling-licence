@using Forestry.Flo.External.Web.Infrastructure
@model Forestry.Flo.External.Web.Models.WoodlandOwner.WoodlandOwnerOrganisationNameViewModel

@{
    ViewData["Title"] = "What's the name of your organisation?";
    ViewData.ShowBackLink();
}

<div class="govuk-grid-column-two-thirds">

    <form method="post">

        <fieldset class="govuk-fieldset">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    @ViewData["Title"]
                </h1>
            </legend>

            <input class="govuk-visually-hidden" aria-hidden="true" asp-for="IsOrganisation"/>

            <div class="govuk-form-group">
                <label asp-for="OrganisationName" class="@GdsConstants.GdsLabelCssClass"></label>
                <validation asp-for="OrganisationName"></validation>
                <input class="@GdsConstants.GdsInputCssClass" asp-for="OrganisationName" autocomplete="organization"/>
            </div>

            <div class="govuk-form-group">
                <div class="govuk-button-group">

                    <button data-prevent-double-click="true" type="submit" class="govuk-button" data-module="govuk-button">
                        @(new ExternalApplicant(User).HasCompletedAccountRegistration == false ? "Continue" : "Save changes")
                    </button>

                </div>
            </div>
        </fieldset>
    </form>
</div>    

@section breadcrumbs
{
    <partial name="Partials/_BreadcrumbsMenu" model="@Model.Breadcrumbs" />
}