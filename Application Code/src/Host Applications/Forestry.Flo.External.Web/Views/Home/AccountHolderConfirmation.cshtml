@using Forestry.Flo.External.Web.Infrastructure
@model Forestry.Flo.External.Web.Models.Home.AccountHolderConfirmationPageModel

@{
    ViewData["Title"] = "Do you already have an account?";
    ViewData.ShowBackLink(BackLinkType.Close);
}

<div class="govuk-grid-column-two-thirds">

    <form method="post">

        <fieldset class="govuk-fieldset">

            <div class="govuk-form-group">

                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        @ViewData["Title"]
                    </h1>
                </legend>
                
                <div class="govuk-hint">This is a new version of the service.  You cannot use your Felling Licence Online (FLO) account to sign in.</div>

                <div class="govuk-radios govuk-!-padding-bottom-5" data-module="govuk-radios">

                    <validation asp-for="@Model.IsAccountHolder"></validation>

                    <div class="govuk-radios__item">
                        
                        @Html.RadioButtonFor(x => x.IsAccountHolder, true, new { @class = "govuk-radios__input", @id = "account-holder" })
                        
                        <label class="govuk-label govuk-radios__label" for="account-holder">
                            Yes, I've already created an account for the new service
                        </label>

                    </div>
                    
                    <div class="govuk-radios__item">

                        @Html.RadioButtonFor(x => x.IsAccountHolder, false, new { @class = "govuk-radios__input", @id = "non-account-holder" })

                        <label class="govuk-label govuk-radios__label" for="non-account-holder">
                            No, I need to create an account
                        </label>

                    </div>

                </div>
                
                <div class="govuk-body">
                    Find out <a class="govuk-link" asp-action="AboutTheNewService">more about the new service</a>
                </div>

            </div>

            <div class="govuk-form-group">

                <div class="govuk-button-group">

                    <button data-prevent-double-click="true" type="submit" class="govuk-button" data-module="govuk-button">
                        Continue
                    </button>

                </div>

            </div>

        </fieldset>

    </form>

</div>