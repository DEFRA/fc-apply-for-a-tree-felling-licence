@model Forestry.Flo.External.Web.Models.FellingLicenceApplication.SelectRestockingOptionsViewModel
@using Forestry.Flo.External.Web.Infrastructure
@using Forestry.Flo.Services.FellingLicenceApplications.Entities
@using Forestry.Flo.Services.Common.Extensions
@using Forestry.Flo.Services.Common

@{
    ViewData["Title"] = "Select restocking options";
    ViewData.ManuallySetBackLink(Model.ReturnToPlayback
        ? Url.Action("FellingAndRestockingPlayback", "FellingLicenceApplication", new { applicationId = Model.ApplicationId })
        : Url.Action("ApplicationSummary", "FellingLicenceApplication", new { applicationId = Model.ApplicationId }));
    ViewData.ShowBackLink();
}

<partial name="Partials/_ConfirmationMessageDisplay"/>
<partial name="Partials/_UserGuideDisplay"/>
<partial name="_ApplicationSummaryNotes" model="@ViewBag.ApplicationSummary"/>


<form id="select-restocking-options" method="post">
    <div class="govuk-grid-column-two-thirds">

        <input type="hidden" asp-for="ApplicationId"/>
        <input type="hidden" asp-for="FellingCompartmentId"/>
        <input type="hidden" asp-for="RestockingCompartmentId"/>
        <input type="hidden" asp-for="ProposedFellingDetailsId"/>
        <input type="hidden" asp-for="FellingOperationType"/>
        <input type="hidden" asp-for="RestockingCompartmentName"/>
        <input type="hidden" asp-for="RestockAlternativeArea"/>

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Select the restocking options for @Model.RestockingCompartmentName
                    </h1>
                </legend>
            </fieldset>
        </div>

        <partial name="_ApplicationEditWarning.cshtml" model="@Model"/>

        @if (Model.RestockAlternativeArea)
        {
            <p class="govuk-body">These are the permitted restocking options for <b>@Model.FellingOperationType.GetDisplayName()</b> in <b>@Model.FellingCompartmentName</b>. Select all restocking options that apply to your plans for this new location.</p>
            <br/>
        }
        else
        {
            <p class="govuk-body">These are the permitted restocking options for <b>@Model.FellingOperationType.GetDisplayName()</b>. Select all restocking options that apply to your plans.</p>
            <br/>
        }

        <input type="hidden" asp-for="@Model.GIS"/>

    </div>


    <div class="govuk-grid-column-full">

        <a class="govuk-link govuk-heading-s collapsible">View map of @Model.RestockingCompartmentName</a>
        <br/>
        <div id="mapWrapper" style="display:none;" class="mapWrapper">
            <br/>
            <arcgis-map id="viewDiv" aria-label="Map of the selected compartment" style="height: 85vh !important;">
                <arcgis-zoom slot="top-right"></arcgis-zoom>
                <arcgis-compass slot="top-right"> </arcgis-compass>
                <arcgis-expand slot="top-right">
                    <arcgis-basemap-gallery></arcgis-basemap-gallery>
                </arcgis-expand>
            </arcgis-map>
            <br/>
        </div>

    </div>

    <br/>

    <div class="govuk-grid-column-two-thirds">
        
        <govuk-form-group asp-for="RestockingOptions">
        
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                    <h2 class="govuk-fieldset__heading">
                        What restocking options do you plan to use?
                    </h2>
                </legend>
                
                <validation asp-for="RestockingOptions"></validation>
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    @{
                        var firstOptionOutput = false;
                    }


                    @if (Model.RestockAlternativeArea)
                    {
                        if (Model.IsIndividualTreesInAlternativeAreaAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsIndividualTreesInAlternativeAreaSelected" aria-describedby="alt-individual-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsIndividualTreesInAlternativeAreaSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsIndividualTreesInAlternativeAreaSelected))">
                                    <b>@TypeOfProposal.PlantAnAlternativeAreaWithIndividualTrees.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="alt-individual-hint">
                                    @TypeOfProposal.PlantAnAlternativeAreaWithIndividualTrees.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsPlantingInAlternativeAreaAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsPlantingInAlternativeAreaSelected" aria-describedby="alt-plant-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsPlantingInAlternativeAreaSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsPlantingInAlternativeAreaSelected))">
                                    <b>@TypeOfProposal.PlantAnAlternativeArea.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="alt-plant-hint">
                                    @TypeOfProposal.PlantAnAlternativeArea.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsNaturalColonisationAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsNaturalColonisationSelected" aria-describedby="colon-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsNaturalColonisationSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsNaturalColonisationSelected))">
                                    <b>@TypeOfProposal.NaturalColonisation.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="colon-hint">
                                    @TypeOfProposal.NaturalColonisation.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }
                    }
                    else
                    {
                        if (Model.IsCoppiceRegrowthAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsCoppiceRegrowthSelected" aria-describedby="coppice-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsCoppiceRegrowthSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsCoppiceRegrowthSelected))">
                                    <b>@TypeOfProposal.RestockWithCoppiceRegrowth.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="coppice-hint">
                                    @TypeOfProposal.RestockWithCoppiceRegrowth.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsCreateOpenSpaceAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsCreateOpenSpaceSelected" aria-describedby="open-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsCreateOpenSpaceSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsCreateOpenSpaceSelected))">
                                    <b>@TypeOfProposal.CreateDesignedOpenGround.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="open-hint">
                                    @TypeOfProposal.CreateDesignedOpenGround.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsIndividualTreesAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsIndividualTreesSelected" aria-describedby="individual-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsIndividualTreesSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsIndividualTreesSelected))">
                                    <b>@TypeOfProposal.RestockWithIndividualTrees.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="individual-hint">
                                    @TypeOfProposal.RestockWithIndividualTrees.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsNaturalRegenerationAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsNaturalRegenerationSelected" aria-describedby="regen-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsNaturalRegenerationSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsNaturalRegenerationSelected))">
                                    <b>@TypeOfProposal.RestockByNaturalRegeneration.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="regen-hint">
                                    @TypeOfProposal.RestockByNaturalRegeneration.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }

                        if (Model.IsReplantFelledAreaAllowed)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" type="checkbox" asp-for="@Model.IsReplantFelledAreaSelected" aria-describedby="replant-hint" id="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsReplantFelledAreaSelected))">
                                <label class="govuk-label govuk-checkboxes__label" for="@(firstOptionOutput == false ? nameof(Model.RestockingOptions) : nameof(Model.IsReplantFelledAreaSelected))">
                                    <b>@TypeOfProposal.ReplantTheFelledArea.GetDisplayName()</b>
                                </label>
                                <div class="govuk-hint govuk-checkboxes__hint" id="replant-hint">
                                    @TypeOfProposal.ReplantTheFelledArea.GetDescription()
                                </div>

                                @{
                                    firstOptionOutput = true;
                                }
                            </div>
                        }
                    }

                </div>
            </fieldset>
        </govuk-form-group>
        <br/>
        <div class="govuk-button-group">
            <button class="govuk-button" type="submit" data-module="govuk-button">
                Continue
            </button>
        </div>
    </div>
</form>

@section Css {
    <link rel="stylesheet" href="https://js.arcgis.com/4.34/esri/themes/light/main.css"/>

    <style>
        #viewDiv {
            border-color: black;
            border-style: solid;
            border-width: 1px;
            padding: 0;
            margin: 0;
            height: 85vh !important;
        }
    </style>
}

@section Scripts {

    <script src="https://js.arcgis.com/calcite-components/3.3.3/calcite.esm.js" type="module"></script>
    <script src="https://js.arcgis.com/4.34/"></script>
    <script type="module" src="https://js.arcgis.com/4.34/map-components/"></script>
    <script>
        require(["../../js/mapping/maps/map-compartment-selection.js?v=" + Date.now()], function (MapCompartmentSelection) {
            var mapObj = new MapCompartmentSelection("viewDiv");
        })
    </script>

    <script>
        var coll = document.getElementsByClassName("collapsible");

        coll[0].addEventListener("click", function () {
            var content = document.getElementsByClassName("mapWrapper");
            if (content[0].style.display === "block") {
                content[0].style.display = "none";
            } else {
                content[0].style.display = "block";
            }
        });
    </script>

    @if (!Model.AllowEditing)
    {
        <script src="/js/disable-form-elements.js"></script>

        <script>

            $(function () {

                disableFormElements('#select-restocking-options');
            });

        </script>
    }
}