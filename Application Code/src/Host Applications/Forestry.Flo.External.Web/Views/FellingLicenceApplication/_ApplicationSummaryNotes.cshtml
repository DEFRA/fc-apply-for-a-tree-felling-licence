@using Forestry.Flo.Services.Common.Extensions
@model Forestry.Flo.External.Web.Models.FellingLicenceApplication.FellingLicenceApplicationSummary
<dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Status
        </dt>
        <dd class="govuk-summary-list__value">
            <vc:gds-application-status-tag application-state="@Model.Status"></vc:gds-application-status-tag>
        </dd>
    </div>
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Application reference
        </dt>
        <dd class="govuk-summary-list__value">
            @Model.ApplicationReference
        </dd>
    </div>
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Woodland name
        </dt>
        <dd class="govuk-summary-list__value">
            @Model.PropertyName
        </dd>
    </div>
    @if (!Model.NameOfWood.IsNullOrEmpty())
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Name of wood
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.NameOfWood
            </dd>
        </div>
    }
    @if (!Model.AgencyName.IsNullOrEmpty())
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Agency
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.AgencyName
            </dd>
        </div>
    }
    @if (!Model.WoodlandOwnerName.IsNullOrEmpty())
    {
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                Woodland Owner
            </dt>
            <dd class="govuk-summary-list__value">
                @Model.WoodlandOwnerName
            </dd>
        </div>
    }
  
</dl>
