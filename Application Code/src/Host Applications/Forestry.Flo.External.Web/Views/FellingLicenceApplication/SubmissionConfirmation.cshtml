@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Forestry.Flo.External.Web.Models.FellingLicenceApplication.SubmissionConfirmationViewModel
@{
    ViewData["Title"] = "Application Submitted";
}

<div class="govuk-grid-column-full">
    <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
            Application submitted
        </h1>
        <div class="govuk-panel__body">
            Your reference number<br>
            <strong>@Model.ApplicationReference</strong>
        </div>
    </div>

    <p class="govuk-body">We have sent you a confirmation email.</p>
    <h2 class="govuk-heading-m">What happens next</h2>
    
    <p class="govuk-body">We’ve received your application.</p>

    <p class="govuk-body">We’ll review it and get in touch to confirm it’s been accepted or to ask for more information.</p>

    <p class="govuk-body"> <a href="https://forms.office.com/e/3jqkczV1Am" target="_blank" rel="noreferrer noopener" class="govuk-link">What did you think of this service?</a>  (takes 30 seconds)</p>
   
</div>
@section breadcrumbs
{
    <partial name="Partials/_BreadcrumbsMenu" model="@Model.Breadcrumbs"/>
}